<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
      <% @article.errors.full_messages.each do |msg| %>
        <p>
          <%= msg %>
        </p>
      <% end %>
  <% end %>
  <%= f.label :title, "Название новости", class: "test-class" %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :text, "Текс новости" %><br>
  <%= f.text_area :text %><br><br>
  <%= f.label :published_at, "Дата публикации" %><br>
  <%= f.date_select :published_at, include_blank: true %><br><br>
  <%= f.label :category %><br>
  <%= f.select(:category_ids, options_for_select(Category.categories_options), {}, multiple: true)  %>
  <div style="margin-top: 15px;">
    <%= f.submit value: "Add" %>
  </div>
<% end %>